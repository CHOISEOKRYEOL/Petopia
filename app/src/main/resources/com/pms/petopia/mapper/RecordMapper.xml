<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.pms.petopia.dao.RecordDao">
  
  <resultMap id="recordMap" type="record">
    <id column="exno" property="no"/>
    <result column="state" property="state"/>
    <result column="history" property="record"/>
    
    <!--  
    <association property="owner" javaType="member">
      <id column="owner_no" property="no"/>
      <result column="owner_name" property="name"/>
    </association>
    -->
    
    <association property="petNo" javaType="pet">
      <id column="petNo_no" property="no"/>
    </association>
    
     <association property="hospitalNo" javaType="hospital">
      <id column="hospitalNo_no" property="no"/>
    </association>
    
  </resultMap>
    
  <insert id="insert" parameterType="record">
    insert into pet_hprecord(pno,hno,state,history) 
    values(#{petNo.no},#{hospitalNo.no},#{state},#{record})
  </insert>
  
  <select id="findAll" resultMap="recordMap">
    select 
      pno,
      hno,
      state,
      history
    from pet_hprecord 
    order by exno asc
  </select>
  
  <select id="findByNo" resultMap="recordMap" parameterType="int">
    select 
      pno,
      hno,
      state,
      history
    from pet_hprecord
    where exno = #{value}
    order by exno asc
  </select>
  
  <update id="update" parameterType="record">
     update pet_hprecord
    <set>
      <if test="state != null or state != ''">
        state = #{state},
      </if>
      <if test="record != null or record != ''">
        history = #{record}
      </if>
    </set>
    where exno = #{no}
  </update>
  
  <delete id="delete" parameterType="int">
    delete from pet_hprecord 
    where no=#{value}
  </delete>

</mapper>
