<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.pms.petopia.dao.QnaDao">
  
  <resultMap id="qnaMap" type="qna">
    <id column="qno" property="no"/>
    <result column="title" property="title"/>
    <result column="cont" property="content"/>
    <result column="ans" property="answer"/>
    <result column="cdt" property="createdDate"/>
    <result column="adt" property="answeredDate"/>
    
    <association property="writer" javaType="member">
	    <id column="writer_no" property="no"/>
	    <result column="writer_name" property="name"/>
    </association>
  </resultMap>
  
  <insert id="insert" parameterType="qna">
    insert into pet_qna(title, cont, writer)
    values(#{title}, #{content}, #{writer.no})
  </insert>

  <select id="findByNo" resultMap="qnaMap" parameterType="int">
    select
      qno, title, cont, cdt
    from pet_qna
      where qno=#{value}
  </select>
  
  <select id="findAll" resultMap="qnaMap">
    select
      q.qno, q.title, q.cdt,
      m.mno as writer_no, m.name as writer_name
    from pet_qna q
      inner join pet_user m on m.mno=q.writer
    order by q.cdt desc
  </select>
  
  <update id="update" parameterType="qna">
    update pet_qna
    <set>
      <if test="title != '' and title != null">
        title = #{title},
      </if>
      <if test="cont != '' and cont != null">
        cont = #{content}
      </if>
    </set>
    where pno = #{no}
  </update>
  
  <delete id="delete" parameterType="int">
    delete from pet_qna
    where pno = #{value}
  </delete>
</mapper>







