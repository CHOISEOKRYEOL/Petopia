<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
  version="4.0">

  <display-name>petopia</display-name>

<!--  필터 등록 및 필터를 적용할 URL 설정 -->

	<filter>
	  <filter-name>CharacterEncodingFilter</filter-name>
	  <filter-class>com.pms.petopia.web.filter.CharacterEncodingFilter</filter-class>
	  <init-param>
	 <param-name>encoding</param-name>
	 <param-value>UTF-8</param-value>
	  </init-param>
	</filter>
	<filter-mapping>
	  <filter-name>CharacterEncodingFilter</filter-name>
	  <url-pattern>/*</url-pattern>
	</filter-mapping>

<!-- 서블릿 등록 및 서블릿의 URL 설정 -->

  <servlet>
    <servlet-name>AppInitHandler</servlet-name>
    <servlet-class>com.pms.petopia.web.AppInitHandler</servlet-class>
    <init-param>
    <param-name>mybatis-config</param-name>
    <param-value>com/pms/petopia/conf/mybatis-config.xml</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>

</web-app>
